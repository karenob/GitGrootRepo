@using IAmGroot2.Extensions;
@{
    ViewBag.Title = "Home Page";
    string taskToken = ViewBag.TaskToken;
    Layout = "~/Views/Shared/_ApplicationLayout.cshtml";
}
<approveComponent taskToken="@taskToken"></approveComponent>
@section Scripts{
    @if (Html.IsRelease())
    {
        <script src="~/Scripts/bundles/ApproveComponent.min.js"></script>
    }
    else
    {
        <script type="text/javascript">System.import('Scripts/Angular/ApproveComponent');</script>
    }
}

